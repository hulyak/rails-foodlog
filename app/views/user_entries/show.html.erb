<% content_for :title do %>
  <%= @user_entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @user_entry.meal_type %>:
        <%= @user_entry.category.title %>
      </p>

      <div class="panel-block">
        Calories: <%= @user_entry.calories %>
      </div>

      <div class="panel-block">
        Proteins: <%= @user_entry.proteins %>
      </div>

      <div class="panel-block">
        Carbohydrates: <%= @user_entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Fats: <%= @user_entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Edit", edit_user_entry_path(@user_entry), class: "button is-gray" %>
        <%= link_to "Delete", user_entry_path(@user_entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
        <%= link_to 'Back', user_entries_path, class: "button is-gray" %>
      </div>
      <div class="column">
        <!-- -->
      </div>
    </div>
  </div>
</div>



